<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- Allow content to extend into system bars (CSS will handle padding) -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#0B1220</item> <!-- Updated to your suggested dark color -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Background color matching the top of your image -->
        <item name="windowSplashScreenBackground">#FFF5F8</item> 
        <!-- The Icon (Points to our PNG now) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Duration -->
        <item name="windowSplashScreenAnimationDuration">500</item> 
        <!-- Fallback for older Androids -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>
</resources>