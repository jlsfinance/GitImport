<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient similar to your splash image -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF5F0F8"
                android:centerColor="#FFFAF5FC"
                android:endColor="#FFF0F8F5"
                android:angle="135"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Centered logo/icon -->
    <item
        android:gravity="center"
        android:width="200dp"
        android:height="200dp">
        <bitmap
            android:src="@drawable/ic_launcher_foreground"
            android:gravity="center"/>
    </item>
</layer-list>
